import java.util.*;
public class task14 {
    public static void main(String[] args)
    {
       int r,sum=0,n,i;
       Scanner sc=new Scanner(System.in);
       System.out.println("enter the number");
       n=sc.nextInt();
       for(i=n;n!=0;i++)
       {
        r=n%10;
        sum=sum+r;
        n=n/10;
       }
       System.out.println(sum);
    }
}
